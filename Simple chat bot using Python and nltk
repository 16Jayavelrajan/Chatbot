        "pairs = [\n",
        "    ['My Name is (.*)',['Hi %1']],\n",
        "    ['(hi|hello|hey|holla|hola)',['hey there','hi there','haayy']],\n",
        "    ['(.*) in (.*) is fun',['%1 in %2 is indeed fun']],\n",
        "    ['(.*)(location|city) ?',['Tokyo,Japan']],\n",
        "    ['(.*)created you?',['Jayavel Rajan did using NLTK and python']],\n",
